<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Sendit_Bliskapaczka>
            <version>0.1.1</version>
        </Sendit_Bliskapaczka>
    </modules>
    <global>
        <helpers>
            <sendit_bliskapaczka>
                <class>Sendit_Bliskapaczka_Helper</class>
            </sendit_bliskapaczka>
        </helpers>
        <blocks>
            <sendit_bliskapaczka>
                <model>Sendit_Bliskapaczka_Block</model>
            </sendit_bliskapaczka>
        </blocks>
        <models>
            <sendit_bliskapaczka>
                <class>Sendit_Bliskapaczka_Model</class>
                <model>Sendit_Bliskapaczka_Model</model>
                <resourceModel>sendit_bliskapaczka_resource</resourceModel>
            </sendit_bliskapaczka>
            <sendit_bliskapaczka_resource>
                <class>Sendit_Bliskapaczka_Model_Resource</class>
                <entities>
                    <order>
                        <table>sendit_bliskapaczka_order</table>
                    </order>
                </entities>
            </sendit_bliskapaczka_resource>
        </models>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <sendit_bliskapaczka_set_pos_data>
                        <type>singleton</type>
                        <class>sendit_bliskapaczka/observer</class>
                        <method>setPosData</method>
                    </sendit_bliskapaczka_set_pos_data>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <controller_front_init_before>
                <observers>
                    <sendit_bliskapaczka_autoloader_working_with_bliskapaczka_api_client>
                        <type>singleton</type>
                        <class>sendit_bliskapaczka/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </sendit_bliskapaczka_autoloader_working_with_bliskapaczka_api_client>
                </observers>
            </controller_front_init_before>
            <sales_order_place_after>
                <observers>
                    <sendit_bliskapaczka_create_order_via_api>
                        <type>singleton</type>
                        <class>sendit_bliskapaczka/observer</class>
                        <method>createOrderViaApiWrapper</method>
                    </sendit_bliskapaczka_create_order_via_api>
                </observers>
            </sales_order_place_after>
            <admin_system_config_changed_section_carriers>
                <observers>
                    <sendit_bliskapaczka_validate_shipping_module_config_data>
                        <type>singleton</type>
                        <class>sendit_bliskapaczka/observer</class>
                        <method>validateAdminConfiguration</method>
                    </sendit_bliskapaczka_validate_shipping_module_config_data>
                </observers>
            </admin_system_config_changed_section_carriers>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <sendit_bliskapaczka_set_pos_data>
                        <type>singleton</type>
                        <class>sendit_bliskapaczka/observer</class>
                        <method>setPosDataAdmin</method>
                    </sendit_bliskapaczka_set_pos_data>
                </observers>
            </adminhtml_sales_order_create_process_data>
        </events>
        <resources>
            <sendit_bliskapaczka_setup>
                <setup>
                    <module>Sendit_Bliskapaczka</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sendit_bliskapaczka_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote_address>
                <pos_code>
                    <to_order_address>*</to_order_address>
                </pos_code>
                <pos_operator>
                    <to_order_address>*</to_order_address>
                </pos_operator>
            </sales_convert_quote_address>
        </fieldsets>
    </global>
    <frontend>
        <layout>
            <updates>
                <sendit_bliskapaczka>
                    <file>sendit/bliskapaczka.xml</file>
                </sendit_bliskapaczka>
            </updates>
        </layout>
        <translate>
            <modules>
                <sendit_bliskapaczka>
                    <files>
                        <default>Sendit_Bliskapaczka.csv</default>
                    </files>
                </sendit_bliskapaczka>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <sendit_bliskapaczka before="Mage_Adminhtml">Sendit_Bliskapaczka_Adminhtml</sendit_bliskapaczka>
                    </modules>
                </args>
            </adminhtml>
        </routers>
        <layout>
            <updates>
                <sendit_bliskapaczka>
                    <file>sendit/bliskapaczka.xml</file>
                </sendit_bliskapaczka>
            </updates>
        </layout>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <sendit_bliskapaczka>
                    <file>sendit_bliskapaczka.xml</file>
                </sendit_bliskapaczka>
            </updates>
        </layout>
        <translate>
            <modules>
                <sendit_bliskapaczka>
                    <files>
                        <default>Sendit_Bliskapaczka.csv</default>
                    </files>
                </sendit_bliskapaczka>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <carriers>
            <sendit_bliskapaczka>
                <active>1</active>
                <model>sendit_bliskapaczka/carrier_bliskapaczka</model>
                <title>Bliska Paczka</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </sendit_bliskapaczka>
            <sendit_bliskapaczka_courier>
                <active>1</active>
                <model>sendit_bliskapaczka/carrier_courier</model>
                <title>Bliska Paczka Kurier</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </sendit_bliskapaczka_courier>
        </carriers>
    </default>
    <crontab>
        <jobs>
            <update_fast_statuses>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>sendit_bliskapaczka/observer::updateFastStatuses</model>
                </run>
            </update_fast_statuses>
            <update_slow_statuses>
                <schedule>
                    <cron_expr>* */2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>sendit_bliskapaczka/observer::updateSlowStatuses</model>
                </run>
            </update_slow_statuses>
        </jobs>
    </crontab>
</config>
